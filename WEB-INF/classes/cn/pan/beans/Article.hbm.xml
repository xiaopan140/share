<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="cn.pan.beans">
    <class name="Article" table="article">
        <id name="id" column="id" type="integer">
            <generator class="increment"/>
        </id>
        <property name="title" column="title" type="string" />
        <property name="channelId" column="c_id" type="integer" />
        <property name="content" column="content" type="text" />
        <property name="attachement" column="attachement" type="string" />
        <property name="author" column="author" type="string" />
        <property name="createTime" column="createTime" type="date" />
    </class> 
</hibernate-mapping>
